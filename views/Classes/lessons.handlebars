<section>
<h2> {{class.title}}'s Classes</h2>
<table >
    <thead>
        <tr>
            <th>Lesson Number</th>
            <th>Lesson Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each class.lessons}}
            <tr>
                <td>{{lesson_number}}</td>
                <td>{{lesson_title}}</td>
                <td><a href="/class/{{../class._id}}/lessons/{{lesson_number}}">View Lesson</a></td>
            </tr>
        {{/each}}

    </tbody>
</table>
</section>